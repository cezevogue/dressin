{% extends 'base.html.twig' %}

{% block body %}

    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Ref</th>
            <th scope="col">Prix</th>
            <th scope="col">Descriptif</th>
            <th scope="col">Photo</th>
            <th scope="col">Marque</th>
            <th scope="col">Section</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for product  in  products %}


        <tr>
            <th scope="row">{{ product.id }}</th>
            <td>{{ product.title }}</td>
            <td>{{ product.reference }}</td>
            <td>{{ product.price | format_currency('EUR') }}</td>
            <td>{{ product.description | slice(0,15) ~ '...' }}</td>
            <td>
                <img src="{{ asset('upload/') }}{{ product.picture }}" width="50" alt="{{ product.title }}">
            </td>
            <td>{{ product.brand }}</td>
            <td>{{ product.gender }}</td>
            <td>
                <a href="{{ path('editProduct', { id:product.id  }) }}"><img src="{{ asset('update.png') }}" alt="modifier"></a>
                <a href="{{ path('deleteProduct', {'id': product.id}) }}" onclick="return confirm('Etes-vous de vouloir supprimer cet article')"  ><img src="{{ asset('delete.png') }}" alt="supprimer"></a>
            </td>
        </tr>

        {% endfor %}

        </tbody>
    </table>



{% endblock %}

{% block title %}
    {{ parent() }}Liste des produits
{% endblock %}


