{% extends 'panelAdmin.html.twig' %}

{% block body %}
    <form class="d-flex" method="post" action="{{ path('searchRef') }}">
        <input class="form-control me-sm-2" type="text" name="search" placeholder="Rechercher reference">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Recherche</button>
    </form>
    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Ref</th>
            <th scope="col">Prix</th>
            <th scope="col">Descriptif</th>
            <th scope="col">Photo</th>
            <th scope="col">Marque</th>
            <th scope="col">Sous-Catégorie</th>
            <th scope="col">Catégorie</th>
            <th scope="col">Section</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for product  in  products %}


            <tr>
                <th scope="row">{{ product.id }}</th>
                <td>{{ product.title }}</td>
                <td>{{ product.reference }}</td>
                <td>{{ product.price | format_currency('EUR') }}</td>
                <td>{{ product.description | slice(0,15) ~ '...' }}</td>
                <td>
                    <img src="{{ asset('upload/') }}{{ product.picture }}" width="50" alt="{{ product.title }}">
                </td>
                <td>{{ product.brand }}</td>
                <td>{{ product.category.title }}</td>
                <td>{{ product.category.subCategory.title }}</td>
                <td>{{ product.gender }}</td>
                <td>
                    <a class="btn " href="{{ path('addStock', { id:product.id  }) }}">Déclarer les stocks</a>
                </td>
            </tr>

        {% endfor %}

        </tbody>
    </table>



{% endblock %}

{% block title %}
    {{ parent() }}Stocks
{% endblock %}


{% block titre %}

    Stocks
{% endblock %}

